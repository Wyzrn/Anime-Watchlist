<!-- views/listings/edit.ejs -->
<meta name="viewport" content="width=device-width, initial-scale=1.0" />

<link rel="stylesheet" href="/stylesheets/style.css" />
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Edit <%= watchlist.name %></title>
  </head>
  <body>
   <div class="new-container">
        <div class="new-form-container">
            <%- include('../partials/_navbar.ejs') %>
            <h1>Edit Your Watchlist!</h1>
            <form action="/watchlists/<%= watchlist._id %>?_method=PUT" method="POST">
            <label for="title">Title:</label>
            <input 
                type="text" 
                name="title" 
                id="title" 
                value="<%= watchlist.title %>"
                required 
            />
            <label for="description">Description:</label>
            <input 
                type="text" 
                name="description" 
                id="description"
                value="<%= watchlist.description %>"
            />
            <label for="rating">Rating:</label>
            <input 
                type="number" 
                name="rating" 
                id="rating" 
                value="<%= watchlist.rating %>"
            />
            <label for="episodeCount">Episode Count:</label>
            <input  
                type="number" 
                name="episodeCount" 
                id="episodeCount" 
                value="<%= watchlist.episodeCount %>"
                required 
            />
            <label for="image">Image:</label>
            <input 
                type="text" 
                name="image" 
                id="image"
                value="<%= watchlist.image %>" 
            />
            <label for="status">Status:</label>
            <input 
                type="text" 
                name="status" 
                id="status" 
                value="<%= watchlist.status %>"
                required 
            />
            <button type="submit">Submit</button>
            </form>
        </div>
    </div>
  </body>
</html>