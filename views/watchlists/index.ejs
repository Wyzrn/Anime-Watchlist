<!-- views/listings/index.ejs -->

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Watchlist</title>
  </head>
  <body>
    <%- include('../partials/_navbar.ejs') %>
    <h1>Here's your Watchlist</h1>
    <a href="/watchlists/new">Add a New Watchlist</a>
    <ul>
      <% watchlists.forEach((watchlist) => { %>
      <li>
       A watchlist of <%= watchlist.title %> made by <%= watchlist.owner.username %>.
       <a href="/watchlists/<%= watchlist._id %>">View more details.</a>
      </li>
      <% }) %>
    </ul>
  </body>
</html>
